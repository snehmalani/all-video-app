<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/imgBackImage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/realtiveTop"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:adjustViewBounds="true"
        android:padding="@dimen/_20sdp"
        android:src="@drawable/vector1" />

    <RelativeLayout
        android:id="@+id/realtiveTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_40sdp"
        android:gravity="start"
        android:paddingStart="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp">

        <TextView
            android:id="@+id/txtSocialTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:text="@string/manage_file_on_device"
            android:textColor="@color/black"
            android:textSize="@dimen/_26sdp" />

        <TextView
            android:id="@+id/txtSocialThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSocialTwo"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_55sdp"
            android:gravity="center"
            android:text="@string/free_application_for_download"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />
    </RelativeLayout>
</RelativeLayout>
