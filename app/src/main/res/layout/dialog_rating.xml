<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_centerVertical="true"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/_11sdp"
    android:layout_marginEnd="@dimen/_11sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_6sdp"
    app:cardElevation="@dimen/_4sdp"
    app:cardMaxElevation="@dimen/_4sdp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgrat"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_135sdp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:padding="@dimen/_15sdp"
            android:src="@drawable/rating_top" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgrat"
            android:layout_marginTop="@dimen/_10sdp"
            android:clickable="false"
            android:ellipsize="end"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:text="Rate Video Downloader App"
            android:textColor="#001c3c"
            android:textSize="@dimen/_16sdp" />

        <TextView
            android:id="@+id/txtTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitle"
            android:layout_marginTop="@dimen/_5sdp"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:text="If you enjoy using Video Downloader application, please take a moment to rate it. Thanks for your support!"
            android:textColor="#5e5e5e"
            android:textSize="@dimen/_11sdp" />

        <RelativeLayout
            android:id="@+id/rel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitle2"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_15sdp">

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/ImageRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:isIndicator="false"
                android:numStars="5"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:stepSize="1" />
        </RelativeLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/rattingbar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtTitle2"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/rate"
            app:lottie_renderMode="automatic" />




        <TextView
            android:id="@+id/txtTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rattingbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:ellipsize="end"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:text="Thanks for your feedback"
            android:textColor="@color/colorYellow"
            android:textSize="@dimen/_13sdp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtRate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/txtTitle3"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_35sdp"
            android:background="@drawable/ad_btn_default"
            android:gravity="center"
            android:text="RATE APP"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/txtRemondLater"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/txtRate"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_35sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:gravity="center"
            android:text="Remind me later"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
