<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginLeft="@dimen/_12sdp"
    android:layout_marginRight="@dimen/_12sdp"
    app:cardBackgroundColor="@color/card_bg_color"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_1sdp"
    app:cardMaxElevation="@dimen/_1sdp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/relativeMainData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/mainNoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_4sdp"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtData1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_17sdp"
                android:gravity="center"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:selectAllOnFocus="true"
                android:text="@string/play_first_then_download"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/maionTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtData1"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="start"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:text="@string/play_the_video_first_then_the_download_button_will_be_available"
                android:textColor="@color/color_bottom_icon"
                android:textSize="@dimen/_11sdp" />

            <RelativeLayout
                android:id="@+id/realtiveBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/maionTxt"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/round_dowenload" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_toEndOf="@+id/img1"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/fcon_as_p_data"
                    app:tint="@color/color_bottom_icon" />

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/img2"
                    android:src="@drawable/image_colored_download" />
            </RelativeLayout>

            <View
                android:id="@+id/middlev"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/realtiveBtn"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@color/md_divider"
                android:visibility="visible" />

            <TextView
                android:id="@+id/reportTxt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@+id/middlev"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_toStartOf="@+id/txtSubMit"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:text="@string/cancel"
                android:textAllCaps="true"
                android:textColor="@color/sub_textcolor"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSubMit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@+id/middlev"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:text="@string/GOT_IT"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/realtiveTwitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imgTwitter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_350sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/back_twiter_help" />

            <TextView
                android:id="@+id/txtSubMitTwitter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_33sdp"
                android:layout_below="@+id/imgTwitter"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/new_submit_bgdy"
                android:gravity="center"
                android:text="@string/got_it"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
